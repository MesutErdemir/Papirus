<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="{{ settingService.getSettingValue("description") }}">
    <meta name="author" content="{{ settingService.getSettingValue("author") }}">

    <title>{% block title %}Home{% endblock %} - {{ settingService.getSettingValue("site_name") }}</title>

    <!-- Bootstrap core CSS -->
    <link href="{{ asset('assets/cleanblog/vendor/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">

    <!-- Custom fonts for this template -->
    <link href="{{ asset('assets/cleanblog/vendor/font-awesome/css/font-awesome.min.css') }}" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>

    <!-- Custom styles for this template -->
    <link href="{{ asset('assets/cleanblog/css/clean-blog.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/cleanblog/css/custom.css') }}" rel="stylesheet">

    {% block custom_css %}{% endblock %}
  </head>
  <body>
    {% block body_content %}{% endblock %}

    <hr>

    <!-- Footer -->
    {{ include('cleanblog/_include/footer.html.twig') }}

    <!-- Bootstrap core JavaScript -->
    <script src="{{ asset('assets/cleanblog/vendor/jquery/jquery.min.js') }}"></script>
    <script src="{{ asset('assets/cleanblog/vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>

    <!-- Custom scripts for this template -->
    <script src="{{ asset('assets/cleanblog/js/clean-blog.js') }}"></script>

    {% block custom_js %}{% endblock %}
  </body>
</html>
